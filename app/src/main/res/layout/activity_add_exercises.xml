<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="arkbarkberg.rehappilitering.AddExercises">

    <TextView android:text="Rehabområden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/rehabTitle"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Knä"
        android:background="@color/red"
        android:textColor="#FFFFFF"
        android:id="@+id/knee"
        android:layout_marginTop="20dp"
        android:layout_below="@id/rehabTitle"
        android:onClick="addExercisesToList"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Axel"
        android:background="@color/red"
        android:textColor="#FFFFFF"
        android:id="@+id/shoulder"
        android:layout_below="@id/knee"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Rygg"
        android:background="@color/red"
        android:textColor="#FFFFFF"
        android:id="@+id/back"
        android:layout_marginTop="10dp"
        android:layout_below="@id/shoulder"/>


</RelativeLayout>
